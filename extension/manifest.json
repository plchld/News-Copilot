        "*://*.tovima.gr/*",
        "*://*.star.gr/*",
        "*://*.newsbomb.gr/*",
        "*://*.enikos.gr/*",
        "*://*.ethnos.gr/*",
        "*://*.efsyn.gr/*",
        "*://*.avgi.gr/*",
        "*://*.real.gr/*",
        "*://*.makthes.gr/*",
        "*://*.documento.gr/*",
        "*://*.liberal.gr/*",
        "*://*.thetoc.gr/*",
        "*://*.cnn.gr/*",
