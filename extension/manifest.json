    "activeTab",
    "scripting",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://news-copilot.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
